<Window x:Class="PRODIGY_SD_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRODIGY_SD_03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock FontSize="18" Margin="0,0,0,10">
    Contact Management
            </TextBlock>

            <TextBlock Text="Name" Foreground="Gray"/>
            <TextBox x:Name="NameBox" Height="30" Margin="0,0,0,8"/>

            <TextBlock Text="Phone Number" Foreground="Gray"/>
            <TextBox x:Name="PhoneBox"
         Height="30"
         Margin="0,0,0,8"
         PreviewTextInput="OnlyNumbers"/>

            <TextBlock Text="Email" Foreground="Gray"/>
            <TextBox x:Name="EmailBox" Height="30" Margin="0,0,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="Addbnt" Width="80" Margin="0,0,10,0" Click="Addbnt_Click">Add</Button>
                <Button x:Name="deletebnt" Width="80" Margin="0,0,10,0" Click="deletebnt_Click">Delete</Button>
            </StackPanel>

            <DataGrid x:Name="ContactGrid" Height="200" AutoGenerateColumns="False" CanUserAddRows="False"
                      Margin="0,10,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
                
            </DataGrid>
        </StackPanel>
        
    </Grid>
</Window>
